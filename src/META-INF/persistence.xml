<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="absolute-smsPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>com.alteregos.sms.campaigner.data.beans.Rule</class>
    <class>com.alteregos.sms.campaigner.data.beans.Calls</class>
    <class>com.alteregos.sms.campaigner.data.beans.Dnd</class>
    <class>com.alteregos.sms.campaigner.data.beans.Outbox</class>
    <class>com.alteregos.sms.campaigner.data.beans.Smsgroup</class>
    <class>com.alteregos.sms.campaigner.data.beans.Inbox</class>
    <class>com.alteregos.sms.campaigner.data.beans.Phonebook</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value="admin"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/absolutesms"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
